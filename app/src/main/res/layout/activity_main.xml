<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#F1F1F1"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvdisplay"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:layout_marginTop="92dp"
        android:background="@drawable/border_black"
        android:paddingHorizontal="5sp"
        android:text="0"
        android:textAlignment="textEnd"
        android:textColor="#555050"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <GridLayout
        android:layout_width="360dp"
        android:layout_height="449dp"
        android:columnCount="4"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btnnumber"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_margin="5sp"
            android:backgroundTint="#393939"
            android:shadowColor="@color/white"
            android:shadowRadius="15"
            android:text="0"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btnplus"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:layout_row="3"
            android:layout_column="3"
            android:layout_margin="5sp"
            android:backgroundTint="#C50000"
            android:shadowColor="@color/white"
            android:shadowRadius="15"
            android:text="+"
            android:textSize="30sp"
             />

        <Button
            android:id="@+id/btnminus"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:layout_row="4"
            android:layout_column="3"
            android:layout_margin="5sp"
            android:backgroundTint="#C50000"
            android:shadowColor="@color/white"
            android:shadowRadius="15"
            android:text="-"
            android:textSize="30sp"
            />

        <Button
            android:id="@+id/btnmultiply"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_margin="5sp"
            android:backgroundTint="#C50000"
            android:shadowColor="@color/white"
            android:shadowRadius="15"
            android:text="x"
            android:textAllCaps="false"
            android:textSize="30sp"
            />

        <Button
            android:id="@+id/btnequals"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:layout_row="4"
            android:layout_column="2"
            android:layout_margin="5sp"
            android:backgroundTint="#C50000"
            android:shadowColor="@color/white"
            android:shadowRadius="15"
            android:text="="
            android:textSize="30sp"
            />

        <Button
            android:id="@+id/btndivide"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_margin="5sp"
            android:backgroundTint="#C50000"
            android:shadowColor="@color/white"
            android:shadowRadius="15"
            android:text="/"
            android:textSize="30sp"
             />

        <Button
            android:id="@+id/btndivide2"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_margin="5sp"
            android:backgroundTint="#FF9800"
            android:shadowColor="@color/white"
            android:shadowRadius="15"
            android:text="CA"
            android:textSize="30sp"
             />

        <Button
            android:id="@+id/btnnumber0"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_margin="5sp"
            android:backgroundTint="#393939"
            android:shadowColor="@color/white"
            android:shadowRadius="15"
            android:text="0"
            android:textSize="30sp"
             />

        <Button
            android:id="@+id/btnnumber1"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_margin="5sp"
            android:backgroundTint="#393939"
            android:shadowColor="@color/white"
            android:shadowRadius="15"
            android:text="1"
            android:textSize="30sp"
            />

        <Button
            android:id="@+id/btnnumber2"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:layout_margin="5sp"
            android:backgroundTint="#393939"
            android:shadowColor="@color/white"
            android:shadowRadius="15"
            android:text="2"
            android:textSize="30sp"
            />

        <Button
            android:id="@+id/btnnumber3"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_margin="5sp"
            android:backgroundTint="#393939"
            android:shadowColor="@color/white"
            android:shadowRadius="15"
            android:text="3"
            android:textSize="30sp"
            />

        <Button
            android:id="@+id/btnnumber4"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_margin="5sp"
            android:backgroundTint="#393939"
            android:shadowColor="@color/white"
            android:shadowRadius="15"
            android:text="4"
            android:textSize="30sp"
            />

        <Button
            android:id="@+id/btnnumber5"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_margin="5sp"
            android:backgroundTint="#393939"
            android:shadowColor="@color/white"
            android:shadowRadius="15"
            android:text="5"
            android:textSize="30sp"
            />

        <Button
            android:id="@+id/btnnumber6"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_margin="5sp"
            android:backgroundTint="#393939"
            android:shadowColor="@color/white"
            android:shadowRadius="15"
            android:text="6"
            android:textSize="30sp"
            />

        <Button
            android:id="@+id/btnnumber9"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_margin="5sp"
            android:backgroundTint="#393939"
            android:shadowColor="@color/white"
            android:shadowRadius="15"
            android:text="9"
            android:textSize="30sp"
            />

        <Button
            android:id="@+id/btnnumber8"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_margin="5sp"
            android:backgroundTint="#393939"
            android:shadowColor="@color/white"
            android:shadowRadius="15"
            android:text="8"
            android:textSize="30sp"
            />

        <Button
            android:id="@+id/btnnumber7"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_margin="5sp"
            android:backgroundTint="#393939"
            android:shadowColor="@color/white"
            android:shadowRadius="15"
            android:text="7"
            android:textSize="30sp"
            />

        <Button
            android:id="@+id/btndot"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_margin="5sp"
            android:backgroundTint="#393939"
            android:shadowColor="@color/white"
            android:shadowRadius="15"
            android:text="."
            android:textSize="30sp" />

        <Button
            android:id="@+id/btndel"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_margin="5sp"
            android:backgroundTint="#717171"
            android:shadowColor="@color/white"
            android:shadowRadius="15"
            android:drawableEnd="@drawable/ic_baseline_backspace_24"
            android:paddingEnd="25dp"
            android:textSize="30sp" />

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>